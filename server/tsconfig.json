{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "isolatedModules": true,
        "lib": ["ES2021"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "outDir": "./build",
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es2019",
        "resolveJsonModule": true
    }
}
